= form_for @value do |f|
  - if @value.errors.any?
    #error_explanation
      %h2= "#{pluralize(@value.errors.count, "error")} prohibited this value from being saved:"
      %ul
        - @value.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :attribute
    = f.collection_select :attribute_id, Attribute.all, :id, :name
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save'
